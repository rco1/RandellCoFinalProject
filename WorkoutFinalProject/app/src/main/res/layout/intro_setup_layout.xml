<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/intro_setup_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="rco1.com.workoutfinalproject.Intro.IntroSetup"
    android:weightSum="1">

    <TextView
        android:text="Setup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:textSize="30sp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="24sp" />

        <EditText
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/SetupNameEditText"
            android:hint="Name" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Weight"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="24sp" />

        <EditText
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/SetupWeightEditText"
            android:hint="Weight in LB"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Height"
            android:layout_width="95dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="24sp" />

        <EditText
            android:layout_width="269dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/SetupHeightEditText"
            android:hint="Height in cm"
            android:inputType="number" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.80"
        android:visibility="gone">

        <TextView
            android:text="Age"
            android:layout_width="92dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textSize="24sp" />

        <DatePicker
            android:layout_width="269dp"
            android:layout_height="104dp"
            android:id="@+id/SetupAgeDatePicker"
            style="@android:style/Widget.DatePicker" />
    </LinearLayout>

    <Button
        android:text="Set measurements"
        android:layout_width="match_parent"
        android:layout_height="85dp"
        android:id="@+id/SetupSetMeasurements"
        android:layout_weight="0.17"
        android:background="@drawable/color_green"/>

</LinearLayout>
