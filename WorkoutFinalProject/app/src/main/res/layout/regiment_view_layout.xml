<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/regiment_view_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="rco1.com.workoutfinalproject.Regiment.RegimentViewActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Add Regiment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RegimentViewAddRegimentButton"
            android:layout_weight="1"
            android:background="@drawable/color_green"/>

        <Button
            android:text="Add Workout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RegimentViewAddWorkoutButton"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_weight="1"
            android:background="@drawable/color_green"/>

        <Button
            android:text="Delete regiment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/RegimentViewDeleteRegimentButton"
            android:layout_weight="1"
            android:background="@drawable/color_green"/>

    </LinearLayout>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/RegimentViewRegimentSpinner" />

    <ListView
        android:id="@+id/RegimentViewListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFF"
        android:divider="#000"
        android:dividerHeight="5dp"
        android:drawSelectorOnTop="false"
        android:layout_weight="0.77"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:scrollbars="none"
        android:headerDividersEnabled="false"
        android:footerDividersEnabled="false"
        >

    </ListView>

</LinearLayout>
