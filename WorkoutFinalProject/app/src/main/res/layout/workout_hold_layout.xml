<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workout_rest_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="rco1.com.workoutfinalproject.Workout.WorkoutTypes.WorkoutHoldActivity"
    android:background="@android:color/holo_blue_bright">

    <TextView
        android:text="00:00:00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/WorkoutRestTimerTextView"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:fontFamily="monospace"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Start Workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/WorkoutRestNextButton"
        android:layout_below="@+id/WorkoutRestTimerTextView"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:background="@drawable/color_green"/>

    <Button
        android:text="Save Workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_above="@+id/WorkoutRestTimerTextView"
        android:layout_centerHorizontal="true"
        android:background="@drawable/color_green"/>

</RelativeLayout>
