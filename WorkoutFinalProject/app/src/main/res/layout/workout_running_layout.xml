<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/workout_running_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="rco1.com.workoutfinalproject.Workout.WorkoutTypes.WorkoutRunningActivity"
    android:weightSum="1">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="Start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WorkoutRunningStartButton"
            android:layout_weight="1"
            android:background="@drawable/color_red" />

        <Button
            android:text="Rest"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WorkoutRunningRestButton"
            android:layout_weight="1"
            android:background="@drawable/color_blue"/>

        <Button
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WorkoutRunningClearButton"
            android:layout_weight="1"
            android:background="@drawable/color_green"/>

    </LinearLayout>

    <com.jjoe64.graphview.GraphView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/graph" />

    <TextView
        android:text="00:00:00"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/WorkoutRestTimerTextView"
        android:textSize="50dp"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:fontFamily="monospace" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_weight="0.15">

        <TextView
            android:text="Total steps Taken : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textVasdiew4"
            android:textSize="20dp" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WorkoutRunningStepsTextView"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:text="Stride Speed : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textVasdiew4"
            android:textSize="20dp" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WorkoutRunningSpeedTextView"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="30dp">

        <TextView
            android:text="Distance : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textVasdiew4"
            android:textSize="20dp" />

        <TextView
            android:text="0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WorkoutRunningDistanceTextView"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:text="Save Workout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/WorkoutRunningSaveButton"
        android:layout_weight="0.56" />


</LinearLayout>
